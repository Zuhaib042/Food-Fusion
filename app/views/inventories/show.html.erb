<div class="container">
  <h1><%= Inventory.name %></h1>
  <div>
    <%= link_to new_inventory_inventory_food_path(@inventory) do %>
      Add Food
    <% end %>
  </div>
  <table>
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @inventory_food.each do |inv| %>
      <tr>
        <td><%= inv.food.name%></td>
        <td><%= inv.quantity%><%= inv.food.measurement_unit %></td>
        <td><%= button_to "Delete", inventory_inventory_food_path(inv.id), method: :delete %></td>
      </tr>
      <% end %>
    </tbody>  
  </table>
</div>
<div class="footer">
  <%= link_to "Back to inventories", inventories_path %>
  <%= button_to "Delete", inventory_inventory_food_path(inv.id), method: :delete %>
</div>
